<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.notesapp.ui.HomeController"
            stylesheets="@MainView.css">

    <!-- ===== Title ===== -->
    <top>
        <VBox alignment="CENTER" spacing="5" BorderPane.alignment="CENTER">
            <Label text="?? School Notes App"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-padding: 20 0 5 0;"/>
            <Label text="Select a Class to View or Edit Notes"
                   style="-fx-font-size: 16px; -fx-text-fill: #555;"/>
        </VBox>
    </top>

    <!-- ===== Class List Center ===== -->
    <center>
        <VBox alignment="CENTER" spacing="25" BorderPane.alignment="CENTER">
            <ListView fx:id="classList" prefWidth="550" prefHeight="300"
                      style="-fx-font-size: 18px; -fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10;"/>
            <Button text="Open Selected Class"
                    onAction="#onOpenClass"
                    style="-fx-font-size: 16px; -fx-padding: 10 40; -fx-background-color: #0078D7; -fx-text-fill: white; -fx-background-radius: 8;"/>
        </VBox>
    </center>

    <!-- ===== Footer ===== -->
    <bottom>
        <Label text="© 2025 School Notes Project — Kean University"
               style="-fx-font-size: 12px; -fx-text-fill: #666; -fx-padding: 10;"
               BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
